@model UrunEklemeModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<form asp-action="Ekle" asp-controller="Urun" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label>@localizer["Ürün Adı"] : </label>
        <span asp-validation-for="@Model.ad" class="text-danger"></span>
        <br />
        <input asp-for="@Model.ad" />



    </div>

    <div class="form-group">
        <label>@localizer["Ürün Fiyat"] : </label>
        <span asp-validation-for="@Model.fiyat" class="text-danger"></span>
        <br />
        <input asp-for="@Model.fiyat" />




    </div>

    <div class="form-group">
        <label>@localizer["Ürün Resmi"] : </label>
        <input type="file" asp-for="@Model.resim" class="form-control-file" />

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@localizer["Ekle"]</button>
    </div>

</form>

@section JavaScript {
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}