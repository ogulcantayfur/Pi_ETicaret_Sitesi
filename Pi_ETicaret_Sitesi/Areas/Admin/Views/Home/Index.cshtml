@model List<Urun>

<a asp-action="Ekle" asp-controller="Home" asp-area="Admin" class="btn btn-primary 
   btn-sm my-2">Ekle</a>
<table class="table table-sm table-bordered table-hover mt-2">

    <tr>
        <th>Id</th>
        <th>Resim</th>
        <th>Ad</th>
        <th>Fiyat</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.resim</td>
            <td>@item.ad</td>
            <td>@item.fiyat</td>
            <td>
                <a asp-action="Güncelle" asp-controller="Home" asp-route-id="@item.id" asp-area="Admin" class="btn btn-warning btn-sm">Güncelle</a>
                <a asp-action="Sil" asp-controller="Home" asp-route-id="@item.id" asp-area="Admin" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }





</table>