@model KategoriGuncelleme
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<form asp-action="Guncelle" asp-controller="Kategori" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.id" />
    <div class="form-group">
        <label>@localizer["Kategori Adı"] : </label>
        <span asp-validation-for="@Model.ad" class="text-danger"></span>
        <br />
        <input asp-for="@Model.ad" />

    </div>


    <div class="form-group">
        <a asp-action="Index" asp-controller="Kategori" asp-area="Admin" class="btn btn-warning">@localizer["Geri Dön"]</a>
        <button type="submit" class="btn btn-primary">@localizer["Güncelle"]</button>
    </div>

</form>

@section JavaScript {
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}