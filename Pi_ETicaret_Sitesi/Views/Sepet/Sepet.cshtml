@model List<Urun>

@{
    decimal toplamFiyat = 0;
    if (Model != null)
    {
        toplamFiyat = Model.Sum(I => I.fiyat);
    }
}

@if (Model != null)
{
    <div>
        <div class="card">
            <h5 class="card-header">Tutar Bilgileri</h5>
            <div class="card-body">

                <p class="card-text">
                    Sepetinizdeki toplam tutar:@toplamFiyat - TL
                </p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Alışverişe Devam Et</a>
                <a asp-action="SepetiBosalt" class="btn btn-primary">Sepeti Boşalt</a>

                <a asp-action="SepetiSatinAl" asp-controller="Sepet" asp-route-fiyat="@toplamFiyat" class="btn btn-primary">Satın Al</a>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="card my-1 w-100">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="/img/@item.resim" class="card-img" alt="@item.ad">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.ad</h5>
                            <p class="card-text">@item.fiyat TL</p>   
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
}
else
{
    <div class="text-center">
        <div class="alert alert-secondary" role="alert">
            Sepetinizde bir ürün bulunamadı.
        </div>
        <br />
        <a asp-action="Index" asp-controller="Home" class="btn btn-warning">Alışverişe Devam Et</a>
    </div>
}



