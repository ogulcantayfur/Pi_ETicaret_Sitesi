@model List<Urun>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card mr-1">
                <img src="/img/@item.resim" class="card-img-top" alt="Resim yok">
                <div class="card-body">
                    <h5 class="card-title">@item.ad</h5> 
                    <p class="card-text">@item.fiyat</p>
                    <a asp-action="UrunDetay" asp-controller="Home" asp-route-id="@item.id" class="btn btn-primary float-right">Detay Göster</a>
                </div>
            </div>

        </div>
    }
</div>