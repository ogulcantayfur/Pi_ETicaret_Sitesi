@model KullaniciGirisModel




<form asp-action="GirisYap" method="post" class="p-4 w-75 mx-auto">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <span asp-validation-for="@Model.KullaniciAd" class="text-danger"></span>
        <input type="text" asp-for="@Model.KullaniciAd" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kullanıcı Şifre</label>
        <span asp-validation-for="@Model.Sifre" class="text-danger"></span>
        <input type="password" asp-for="@Model.Sifre" class="form-control" />
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-check">

        <input type="checkbox" asp-for="@Model.BeniHatırla" class="form-check-input" />
        <label asp-for="BeniHatırla" class="form-check-label">Beni Hatırla</label>
    </div>

    <button type="submit">Giriş Yap</button>
</form>

@section JavaScript { 
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}