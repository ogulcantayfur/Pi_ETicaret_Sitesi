@model List<Pi_ETicaret_Sitesi.Models.Urun>

@if (TempData["bildirim"] != null)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Başarılı</strong> @TempData["bildirim"].ToString()
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("KategoriComponent")

    </div>

    <div class="col-md-9">

        @await Component.InvokeAsync("UrunComponent", new { kategoriId = ViewBag.KategoriId })
    </div>

</div>






